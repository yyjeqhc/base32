test "encode" {

  assert_eq!(base32_encode(b"hello"),[0x4E, 0x42, 0x53, 0x57, 0x59, 0x33, 0x44, 0x50])
  assert_eq!(base32_encode(b"hell"),[0x4E, 0x42, 0x53, 0x57, 0x59, 0x33, 0x41, 0x3D])
  assert_eq!(base32_encode(b"hel"),[0x4E, 0x42, 0x53, 0x57, 0x59, 0x3D, 0x3D, 0x3D])
  assert_eq!(base32_encode(b"he"),[0x4E, 0x42, 0x53, 0x51, 0x3D, 0x3D, 0x3D, 0x3D])
  assert_eq!(base32_encode(b"h"),[0x4E, 0x41, 0x3D, 0x3D, 0x3D, 0x3D, 0x3D, 0x3D])
}

test "decode" {
  assert_eq!(base32_decode([0x4E, 0x42, 0x53, 0x57, 0x59, 0x33, 0x44, 0x50]),b"hello".to_array())
  assert_eq!(base32_decode([0x4E, 0x42, 0x53, 0x57, 0x59, 0x33, 0x41, 0x3D]),b"hell".to_array())
  assert_eq!(base32_decode([0x4E, 0x42, 0x53, 0x57, 0x59, 0x3D, 0x3D, 0x3D]),b"hel".to_array())
  assert_eq!(base32_decode([0x4E, 0x42, 0x53, 0x51, 0x3D, 0x3D, 0x3D, 0x3D]),b"he".to_array())
  assert_eq!(base32_decode([0x4E, 0x41, 0x3D, 0x3D, 0x3D, 0x3D, 0x3D, 0x3D]),b"h".to_array())
}